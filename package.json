{
  "name": "escaleroyale",
  "author": "DotDev Consulting",
  "version": "0.1.0",
  "main": "public/electron.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.2",
    "@mui/material": "^6.1.2",
    "@mui/system": "^6.1.2",
    "@mui/x-data-grid": "^7.18.0",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.5",
    "electron-updater": "^6.3.9",
    "electron-is-dev": "^3.0.1",
    "electron-pos-printer": "^1.3.6",
    "js-cookie": "^3.0.5",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-perfect-scrollbar": "^1.5.8",
    "react-router-dom": "^6.26.1",
    "react-scripts": "^5.0.1",
    "react-simple-keyboard": "^3.8.11",
    "react-toastify": "^10.0.6"
  },
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron\"",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "wait-on http://localhost:3000 && electron .",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.escaleroyale.pos",
    "productName": "DotDev Consulting POS",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "public/electron.js",
      "public/preload.js",
      "build/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "publisherName": "DotDev Consulting",
      "artifactName": "${productName}-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "joe-hadchity",
      "repo": "L-Escale-Royale-Frontend"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron-builder": "^25.1.8",
   
    "wait-on": "^8.0.1"
  }
}
